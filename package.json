{
  "name": "blockchain-spv",
  "version": "3.1.4",
  "description": "Stores blockchain headers and verifies transactions with SPV",
  "main": "index.js",
  "scripts": {
    "test": "depcheck && standard src/*.js test/*.js && nyc tape test/*.js | faucet && nyc report",
    "test-browser": "npm run build && test/browser.sh && npm run source",
    "build": "rm -rf lib && babel --presets es2015 src -d lib",
    "source": "rm -rf lib && ln -s src lib",
    "prepublish": "npm run build",
    "publish": "npm run source"
  },
  "keywords": [
    "bitcoin",
    "blockchain",
    "spv",
    "webcoin"
  ],
  "author": "Matt Bell <mappum@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bitcoin-protocol": "^3.0.1",
    "bitcoin-util": "^2.0.0",
    "bitcoinjs-lib": "^2.2.0",
    "bn.js": "^4.11.8",
    "buffer-reverse": "^1.0.1",
    "create-hash": "^1.2.0",
    "depcheck": "^0.6.9",
    "map-deque": "0.0.2",
    "object-assign": "^4.1.0",
    "old": "^0.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "faucet": "0.0.1",
    "nyc": "^6.4.4",
    "standard": "^7.0.0",
    "tape": "^4.4.0",
    "webcoin-bitcoin": "^3.0.0",
    "zuul": "^3.10.1",
    "zuul-ngrok": "^4.0.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mappum/blockchain-spv.git"
  },
  "bugs": {
    "url": "https://github.com/mappum/blockchain-spv/issues"
  },
  "homepage": "https://github.com/mappum/blockchain-spv#readme"
}
